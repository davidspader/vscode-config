{
  // Configurações gerais do Visual Studio Code
  "workbench.colorTheme": "Tokyo Night AltSynt",
  "symbols.hidesExplorerArrows": false,
  "workbench.iconTheme": "symbols",
  "editor.fontFamily": "Victor Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.renderLineHighlight": "gutter",
  "editor.fontLigatures": true,
  "workbench.editor.labelFormat": "short",
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.location": "hidden",
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,

  // Configurações de estilo personalizado usando uma folha de estilo APC
  "apc.stylesheet": {
    ".title-label > h2": "display: none",
    ".editor-actions": "display: none"
  },

  // Configurações do terminal
  "terminal.integrated.fontFamily": "MesloLGS NF",

  // Configurações da barra lateral e localização da barra de status
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,

  // Configurações do editor de texto
  "workbench.editor.showTabs": "none",
  "workbench.editor.editorActionsLocation": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "editor.glyphMargin": false,
  "editor.folding": false,
  "editor.mouseWheelZoom": true,

  // Configurações de layout e limites de edição
  "workbench.layoutControl.type": "menu",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 1,
  "workbench.editor.limit.perEditorGroup": true,

  // Configurações de salvamento automático de arquivos
  "files.autoSave": "onWindowChange",

  // Configurações de fonte para componentes específicos
  "apc.font.family": "MesloLGS NF",
  "chat.editor.fontFamily": "MesloLGS NF",

  // Configurações de lista de linha de altura específica
  "apc.listRow": {
    "lists": [
      "explorer-folders-view",
      "quick-input-list",
      "results"
    ],
    "height": 30
  },

  // Configurações de renderização e tamanho da barra de rolagem
  "editor.renderControlCharacters": false,
  "editor.scrollbar.verticalScrollbarSize": 2,
  "editor.scrollbar.horizontalScrollbarSize": 2,

  // Configurações do explorador de arquivos
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // Configurações de personalização de cores
  "workbench.colorCustomizations": {
    "editorSuggestWidget.selectedBackground": "#a9b1d6",
    "sideBar.background": "#1a1b26",
    "list.activeSelectionBackground": "#9aa5ce",
    "list.inactiveSelectionBackground": "#9aa5ce",
    "list.focusBackground": "#9aa5ce",
    "list.hoverBackground": "#9aa5ce",
    "terminalCursor.foreground": "#f7768e"
  }
}
